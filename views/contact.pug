extend base.pug
block scripts
    script(src="../static/index.js")
block style
     style
            include ../static/style.css
            include ../static/contactstyle.css

            
block content
    h1 Contact Us
    form(action="/contact" method="post" class="myform")
        input(type="text" name="name" 
        class="myinput" placeholder="Enter Your Name")
        input(type="text" name="gender" 
        class="myinput" placeholder="Enter Your Gender")
        input(type="number" name="age" 
        class="myinput" placeholder="Enter Your Age")
        input(type="phone" name="phone" 
        class="myinput" placeholder="Enter Your Phone No.")

        input(type="email" name="email" 
        class="myinput" placeholder="Enter Your Email")

        input(type="text" name="address" 
        class="myinput" placeholder="Enter Your Address")

        button(class="btn")
         | Submit